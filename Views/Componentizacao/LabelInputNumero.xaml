<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Filantroplanta.Views.Componentizacao.LabelInputNumero"
             x:Name="ControleLabelInputNumero"
             BindingContext="{x:Reference ControleLabelInputNumero}"
             >
    <VerticalStackLayout>

        <Label x:Name="NameLabel" Text="{Binding TextoLabel}" />
        <Entry x:Name="NameEntry" Placeholder="{Binding PlaceholderEntry}" WidthRequest="320"  Margin="-10,0,0,0" Keyboard="Numeric" Text="{Binding TextoEntry}" />
        <BoxView HeightRequest="1" Color="LightGray" Margin="0,0,0,10" />

    </VerticalStackLayout>
</ContentView>
