<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Filantroplanta.Views.Componentizacao.LabelTitulo"
             x:Name="ControleLabelTitulo"
             BindingContext="{x:Reference ControleLabelTitulo}"
             >
    <VerticalStackLayout>
        <Label 
                Text="{Binding Titulo}"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                FontAttributes="Bold"
                FontSize="18"
                Margin="0,30"
            />
    </VerticalStackLayout>
</ContentView>
