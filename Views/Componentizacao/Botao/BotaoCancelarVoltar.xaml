<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Filantroplanta.Views.Componentizacao.Botao.BotaoCancelarVoltar"
             x:Name="ControleBotaoCancelarVoltar"
             BindingContext="{x:Reference ControleBotaoCancelarVoltar}">

    <ContentView.Content>
        <Border Stroke="White"
                    StrokeThickness="2"
                    HorizontalOptions="Center"
                    StrokeShape="RoundRectangle 6"
                    Margin="0,0,30,0" >

            <Button x:Name="btnCancelarVoltar" Text="Cancelar" WidthRequest="150" BackgroundColor="#645E5E" TextColor="White" FontAttributes="Bold" />
        </Border>
    </ContentView.Content>
</ContentView>
