<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Filantroplanta.Views.Componentizacao.LabelInputSenha"
             x:Name="ControleLabelInputSenha"
             BindingContext="{x:Reference ControleLabelInputSenha}">
    
    <VerticalStackLayout>
        <Label x:Name="NameLabel"  Text="{Binding TextoLabel}" FontAttributes="Bold"  />
        <Entry x:Name="NameEntry"  Text="{Binding TextoEntry}" Placeholder="*****" IsPassword="True"  />
        <BoxView HeightRequest="1" Color="LightGray" Margin="0,0,0,10"  />
    </VerticalStackLayout>
</ContentView>
