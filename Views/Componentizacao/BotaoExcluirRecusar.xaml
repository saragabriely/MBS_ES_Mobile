<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Filantroplanta.Views.Componentizacao.BotaoExcluirRecusar"
             x:Name="ControleBotaoExcluirRecusar"
             BindingContext="{x:Reference ControleBotaoExcluirRecusar}">

    <ContentView.Content>
        <Border Stroke="White"
                    StrokeThickness="2"
                    HorizontalOptions="Center"
                    StrokeShape="RoundRectangle 6">

            <Button x:Name="btnExcluirRecusar" WidthRequest="150" BackgroundColor="DarkRed" TextColor="White" FontAttributes="Bold" Text="{Binding Texto}"  />
        </Border>
    </ContentView.Content>
</ContentView>
