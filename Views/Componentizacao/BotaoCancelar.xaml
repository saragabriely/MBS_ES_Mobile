<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Filantroplanta.Views.Componentizacao.BotaoCancelar"
             x:Name="ControleBotaoCancelar"
             BindingContext="{x:Reference ControleBotaoCancelar}"
             >

    <HorizontalStackLayout Margin="0,40,0,0" >
        <Border Stroke="White"
                    StrokeThickness="2"
                    HorizontalOptions="Center"
                    StrokeShape="RoundRectangle 6"
                    Margin="0,0,30,0" >

            <Button x:Name="botaoCancelar" WidthRequest="150" BackgroundColor="#645E5E" TextColor="White" FontAttributes="Bold" Text="{Binding Texto}" />
        </Border>

    </HorizontalStackLayout>
</ContentView>
