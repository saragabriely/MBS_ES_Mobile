<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Filantroplanta.Views.Componentizacao.BotaoSalvar"
             x:Name="ControleBotaoSalvar"
             BindingContext="{x:Reference ControleBotaoSalvar}"
             >
    <StackLayout Margin="0,40,0,0">
        <Border Stroke="white"
                    StrokeThickness="2"
                    HorizontalOptions="Center"
                    StrokeShape="RoundRectangle 6"
                    Margin="0,0,10,0" 
                    >
            <Button x:Name="botaoSalvar" WidthRequest="150" BackgroundColor="#1C6B00" TextColor="White" FontAttributes="Bold" Text="{Binding Texto}" />
        </Border>
    </StackLayout>
</ContentView>
